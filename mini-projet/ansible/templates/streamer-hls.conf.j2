# Serveur HTTP pour servir les fichiers HLS et les pages web
server {
    listen 8080;
    location /hls {
        root /tmp;
        types {
            application/vnd.apple.mpegurl m3u8;
            video/mp2t ts;
        }
        add_header Cache-Control no-cache;
        add_header Access-Control-Allow-Origin *;
    }

}                          